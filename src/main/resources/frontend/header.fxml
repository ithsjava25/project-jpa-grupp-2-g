<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="frontend.controller.HeaderController">
    <StackPane fx:id="header" styleClass="main-header">
        <padding>
            <Insets top="15" bottom="10" left="20" right="20"/>
        </padding>

        <HBox fx:id="searchRestaurantBox" alignment="CENTER" StackPane.alignment="CENTER">
            <TextField fx:id="searchRestaurantField" promptText="Search for a restaurant: " prefWidth="200" onAction="#handleRestaurantSearch" />
        </HBox>
    </StackPane>
</VBox>
