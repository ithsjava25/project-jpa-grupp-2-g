<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.geometry.Insets?>


<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="frontend.HelloController"
            fx:id="rootPane">

    <!-- header -->
    <top>
        <StackPane fx:id="headerContainer" prefHeight="120">
            <HBox spacing="20" alignment="CENTER_LEFT">
                <padding>
                    <Insets top="10" right="10" bottom="10" left="10"/>
                </padding>

                <!-- logo -->
                <ImageView fx:id="logoImage" preserveRatio="true"/>

                <!-- sÃ¶kruta -->
                <HBox spacing="5" alignment="CENTER">
                    <Label text="Search:"/>
                    <TextField fx:id="searchRestaurantField" prefWidth="200" onAction="#handleRestaurantSearch"/>
                </HBox>
            </HBox>
        </StackPane>
    </top>

    <!-- category grid -->
    <center>
        <BorderPane fx:id="categoryContainer" prefHeight="200" prefWidth="600">
            <center>
                <GridPane fx:id="grid"/>
            </center>
        </BorderPane>
    </center>

    <bottom>
        <ListView fx:id="restaurantView" prefHeight="200"/>
    </bottom>

</BorderPane>