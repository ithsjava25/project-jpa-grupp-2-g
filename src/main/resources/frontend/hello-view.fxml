<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.GridPane?>

<VBox alignment="TOP_LEFT" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="frontend.HelloController">
    <StackPane>
        <Label fx:id="appName" StackPane.alignment="CENTER_LEFT"/>
        <HBox fx:id="searchRestaurantBox" alignment="CENTER" StackPane.alignment="CENTER">
            <Label text="Search for a restaurant: "/>
            <TextField fx:id="searchRestaurantField" prefWidth="200" onAction="#handleRestaurantSearch"/>
        </HBox>
    </StackPane>

    <BorderPane fx:id="categoryContainer" prefHeight="200" prefWidth="600">
        <center>
            <GridPane fx:id="grid" />
        </center>
    </BorderPane>

    <ListView fx:id="restaurantView"/>
</VBox>