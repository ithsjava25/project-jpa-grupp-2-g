<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.geometry.Insets?>

<VBox alignment="TOP_LEFT" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="frontend.HelloController">
    <StackPane>
        <Label fx:id="appName" StackPane.alignment="CENTER_LEFT"/>
        <HBox fx:id="searchRestaurantBox" alignment="CENTER" StackPane.alignment="CENTER">
            <Label text="Search for a restaurant: "/>
            <TextField fx:id="searchRestaurantField" prefWidth="200" onAction="#handleRestaurantSearch"/>
        </HBox>
    </StackPane>

    <BorderPane fx:id="categoryContainer" prefHeight="200" prefWidth="600">
        <center>
            <GridPane fx:id="grid" hgap="10" vgap="10" alignment="CENTER"/>
        </center>
    </BorderPane>

    <ScrollPane fitToWidth="true" prefHeight="300">
        <FlowPane fx:id="restaurantContainer" hgap="10" vgap="10">
            <padding>
                <Insets top="20" bottom="20" left="10" right="10"/>
            </padding>
        </FlowPane>
    </ScrollPane>

    <ListView fx:id="restaurantView"/>

    <HBox spacing="10" alignment="CENTER">
        <Label text="Fler än 8 personer?"/>
        <TextField fx:id="numberOfPeopleField" promptText="Ange antal personer" onAction="#checkBooking"/>
        <Button text="Bekräfta bokning" fx:id="confirmBookingButton" onAction="#confirmBooking"/>
    </HBox>

    <Label fx:id="bookingConfirmationLabel" visible="false"/>
</VBox>